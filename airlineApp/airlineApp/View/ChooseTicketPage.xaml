<UserControl x:Class="airlineApp.View.ChooseTicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:airlineApp.View"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:custom="clr-namespace:airlineApp.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#000080" Offset="0"/>
                <GradientStop Color="#0000cd" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <custom:SearchTicket  />
        <StackPanel Grid.Row="1" 
                    Orientation="Vertical"
                    HorizontalAlignment="Left">
            <ListView Width="600"
                      Height="140"
                      Margin="0,0,0,30">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Departure" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Arrival" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Departure Date" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Arrival Date" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Price" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Free Places" 
                            Width="auto"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView Width="600"
                      Height="140">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Departure" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Arrival" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Departure Date" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Arrival Date" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Price" 
                            Width="auto"/>
                        <GridViewColumn
                            DisplayMemberBinding="{Binding Path=Id}"
                            Header="Free Places" 
                            Width="auto"/>
                    </GridView>
                </ListView.View>
            </ListView>

        </StackPanel>
        <StackPanel Orientation="Vertical" 
                    Grid.Row="1"
                   
                    Margin="620,10,0,100">
            <TextBlock
            Text="{Binding}" 
                Background="WhiteSmoke"
               
                Width="160"
                Height="200"/>
            
        </StackPanel>
        <Button 
                Style="{DynamicResource InstrumentsButton}"  
                Width="110" Height="40" 
                Content="BOOK" 
                Margin="630,200,0,10" 
                Command="{Binding }" Grid.Row="1"/>
        
    </Grid>
</UserControl>
